<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="mm.gui.controller.MainMenuController"
           styleClass="menu-background"
           stylesheets="@../css/style.css">

    <!-- Central Buttons -->
    <VBox alignment="CENTER" spacing="50">
        <Button fx:id="playButton" text="PLAY" onAction="#handlePlayGame"
                styleClass="play-button-large"
                prefWidth="400" prefHeight="120"/>

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="editorButton" text="Editor" onAction="#handleLevelEditor"
                    styleClass="bottom-button"
                    prefWidth="150" prefHeight="60"/>
            <Button fx:id="settingsButton" text="Settings" onAction="#handleSettings"
                    styleClass="bottom-button"
                    prefWidth="150" prefHeight="60"/>
        </HBox>
    </VBox>

    <!-- Exit-Button zuletzt einfÃ¼gen -->
    <Button fx:id="exitButton" text="Exit" onAction="#handleExit"
            styleClass="exit-button"
            StackPane.alignment="TOP_LEFT">
        <StackPane.margin>
            <Insets top="50" left="50"/>
        </StackPane.margin>
    </Button>

</StackPane>