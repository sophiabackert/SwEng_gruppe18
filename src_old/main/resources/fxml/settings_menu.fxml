<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mm.gui.GuiSettingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label styleClass="title-label" text="Einstellungen"/>

    <GridPane vgap="10" hgap="10">
        <Label text="Lautstärke:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Slider fx:id="volumeSlider" min="0" max="100" value="50" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="FPS:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Slider fx:id="fpsSlider" min="30" max="144" value="60" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label fx:id="fpsLabel" text="60 FPS" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

        <Label text="Auflösung:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="resolutionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Vollbild:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <CheckBox fx:id="fullscreenCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Barrierefreiheit:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <CheckBox fx:id="accessibilityCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Gravitationsstärke:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Slider fx:id="gravityStrengthSlider" min="0" max="20" value="9.81" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label fx:id="gravityStrengthLabel" text="9.81 m/s²" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

        <Label text="Gravitationswinkel:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Slider fx:id="gravityAngleSlider" min="0" max="360" value="270" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label fx:id="gravityAngleLabel" text="270°" GridPane.columnIndex="2" GridPane.rowIndex="6"/>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Speichern" onAction="#handleSave"/>
        <Button text="Zurück" onAction="#handleBack"/>
    </HBox>
</VBox> 