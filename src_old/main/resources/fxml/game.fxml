<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mm.gui.GameController">
   <children>
      <!-- Haupt-Container -->
      <BorderPane fx:id="mainContainer">
         <center>
            <!-- Spiel-Canvas -->
            <StackPane fx:id="gameArea">
               <children>
                  <Canvas fx:id="gameCanvas" height="600.0" width="800.0" />
               </children>
            </StackPane>
         </center>
         <top>
            <!-- Spiel-Info-Leiste -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="game-info-bar">
               <children>
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitGame" text="Exit" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="Aufgabe:" />
                  <Label fx:id="taskLabel" text="Bringe den Ball in die Zielzone" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="Zeit:" />
                  <Label fx:id="timeLabel" text="60.0" />
                  <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#onPauseToggle" text="⏸" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
      
      <!-- Overlay-Container für Countdown/Pause/GameOver/Win -->
      <StackPane fx:id="overlayContainer" visible="false">
         <children>
            <!-- Countdown Overlay -->
            <VBox fx:id="countdownOverlay" alignment="CENTER" spacing="20.0" styleClass="overlay" visible="false">
               <children>
                  <Label fx:id="countdownLabel" styleClass="countdown-text" text="3" />
               </children>
            </VBox>
            
            <!-- Pause Overlay -->
            <VBox fx:id="pauseOverlay" alignment="CENTER" spacing="20.0" styleClass="overlay" visible="false">
               <children>
                  <Label styleClass="overlay-title" text="PAUSE" />
                  <Button mnemonicParsing="false" onAction="#onResumeGame" text="Weiter" />
                  <Button mnemonicParsing="false" onAction="#onExitGame" text="Zum Editor" />
               </children>
            </VBox>
            
            <!-- Win Overlay -->
            <VBox fx:id="winOverlay" alignment="CENTER" spacing="20.0" styleClass="overlay" visible="false">
               <children>
                  <Label styleClass="overlay-title" text="GEWONNEN!" />
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onPlayAgain" text="Nochmal" />
                        <Button mnemonicParsing="false" onAction="#onBackToLevelSelection" text="Level-Auswahl" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Game Over Overlay -->
            <VBox fx:id="gameOverOverlay" alignment="CENTER" spacing="20.0" styleClass="overlay" visible="false">
               <children>
                  <Label styleClass="overlay-title" text="ZEIT ABGELAUFEN!" />
                  <Label text="Du hast es leider nicht innerhalb einer Minute geschafft" />
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onPlayAgain" text="Nochmal" />
                        <Button mnemonicParsing="false" onAction="#onBackToLevelSelection" text="Level-Auswahl" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</StackPane> 