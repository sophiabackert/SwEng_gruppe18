<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pauseScreenPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mm.gui.PauseScreenController">
   <children>
      <VBox fx:id="vBoxPane" alignment="CENTER" layoutX="250.0" layoutY="77.0">
         <children>
            <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="119.0" text="Pause">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="continueButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#continueButton" prefHeight="26.0" prefWidth="100.0" text="continue">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="restartButton" alignment="CENTER" mnemonicParsing="false" onAction="#restartButtonOnAction" prefHeight="26.0" prefWidth="100.0" text="restart">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="backToMenuButton" mnemonicParsing="false" onAction="#backToMenuButton" prefHeight="26.0" prefWidth="100.0" text="back to Menu">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
